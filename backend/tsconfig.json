{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": false,
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@backend/*": ["../backend/src/*"],
      "@frontend/*": ["../frontend/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/*"]
}
